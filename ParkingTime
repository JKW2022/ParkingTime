package parkingtime;

/**
 *
 * @author deez
 */
import java.util.Scanner;
public class ParkingTime {
    /**
     * @param args the command line arguments
     */
public static void main(String[] args) {
//TODO Code application here
        int numDimesObtained, numMaxParkingTime, numNickelsObtained, 
            numPenniesGiven, numPenniesRemaining,
            numPenniesUsed, numQuartersObtained;
        Scanner scan = new Scanner(System.in);
        System.out.print("\nEnter number of pennies given: ");
        numPenniesGiven = scan.nextInt();
        scan.nextLine();
        numQuartersObtained = numPenniesGiven / 25;
        numPenniesRemaining = numPenniesGiven % 25;
        numDimesObtained = numPenniesRemaining / 10; 
        numPenniesRemaining %= 10;
        numNickelsObtained = numPenniesRemaining / 5;
        numPenniesRemaining %= 5;
        System.out.println("\nnumPenniesGiven = " + numPenniesGiven +
                           ", \nnumPenniesConverted = " +
                          (numPenniesGiven - numPenniesRemaining));
        System.out.println("\nnumQuartersObtained = " + numQuartersObtained +
                           ", \nnumDimesObtained = " + numDimesObtained + 
                           ", \nnumNickelsObtained = " + numNickelsObtained);
        
    
    }
    
}
